extends layout

block content
 // Modal
 #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
   .modal-dialog(role='document')
     .modal-content
       .modal-header
         button.close(type='button', data-dismiss='modal', aria-label='Close')
           span(aria-hidden='true') ×
         h4#myModalLabel.modal-title Modal title
       .modal-body
         | ...
       .modal-footer
         button.btn.btn-default(type='button', data-dismiss='modal') Close
         button.btn.btn-primary(type='button') Save changes

 nav.navbar.navbar-default.navbar-static-top
   .container
     .navbar-header
       button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
         span.sr-only Toggle navigation
         span.icon-bar
         span.icon-bar
         span.icon-bar
       a.navbar-brand(href='http://getbootstrap.com/examples/carousel/#') Qolart
     #navbar.navbar-collapse.collapse
       form.navbar-form.navbar-left(role='search')
         .form-group
           .input-group
            .input-group-btn
              button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                | Категории 
                span.caret
              ul.dropdown-menu
                li
                  a(href='#') Action
                li
                  a(href='#') Another action
                li
                  a(href='#') Something else here
                li.divider(role='separator')
                li
                  a(href='#') Separated link
            input.form-control(type='text', placeholder='Ищу...')
            span.input-group-btn
              button.btn.btn-info(type='button') Найти
       ul.nav.navbar-nav.navbar-right
         if (!user)
           li
             a(href='/register' data-toggle='modal', data-target='#myModal') Зарегестрироваться
           li
             a(href='/login' data-toggle='modal', data-target='#myModal') Войти
         if (user)
           li.dropdown
             a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
               | #{user.displayName}
               span.caret
             ul.dropdown-menu
               li
                 a(href='#') Профиль
               li
                 a(href='#') Сообщения
               li
                 a(href='#') Покупки и отзывы
               li
                 a(href='#') Настройки
               li.divider(role='separator')
               li
                 a(href='/logout') Выход
 if (error)
  p.alert.alert-warning
    | #{error}
 if (success)
  p.alert.alert-success
    | #{error}
 if (notice)
  p.alert.alert-notice
    | #{error}